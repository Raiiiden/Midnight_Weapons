{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "animation": {
      "type": "object",
      "properties": {
        "frametime": {
          "type": "number",
          "description": "Frame time in seconds."
        },
        "interpolate": {
          "type": "boolean",
          "description": "Enable/disable interpolation."
        },
        "frames": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "description": "Frame sequence."
        }
      },
      "required": ["frametime", "interpolate", "frames"]
    }
  },
  "example": {
    "animation": {
      "frametime": 2,
      "interpolate": false,
      "frames": [0, 1, 2, 3, 4, 5, 6, 7]
    }
  }
}
